<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="#FDFDFD"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/message_fragment_listview_image"
        android:gravity="center"
        android:layout_marginStart="3dp"
        android:padding="8dp"
        android:layout_weight="1.66"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/message_fragment_listview_photo"
            android:padding="4dp"
            android:src="@drawable/face1"
            android:scaleType="fitCenter"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_weight="6.22"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/message_fragment_listview_name"
            android:singleLine="true"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="8dp"
            android:text="马爹"
            android:textColor="@color/md_grey_900"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/message_fragment_listview_profile"
            android:textSize="13sp"
            android:textColor="@color/md_grey_500"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:text="来打球啊儿子，老爸帮你定场"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_weight="2"
        android:gravity="center_horizontal"
        android:layout_width="0dp"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/message_fragment_listview_date"
            android:layout_marginTop="5dp"
            android:text="3月3日"
            android:singleLine="false"
            android:textSize="13sp"
            android:layout_marginLeft="4dp"
            android:textColor="@color/md_grey_700"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>
