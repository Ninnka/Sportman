<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:layout_gravity="top"
        android:id="@+id/activities_detail_registration_instruction_toolbar"
        android:minHeight="?android:actionBarSize"
        android:background="#FEFEFE"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="3dp"
        android:popupTheme="@android:style/ThemeOverlay.Material.Light">

        <LinearLayout
            android:gravity="left|center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/activity_detail_registration_instruction_return"
                android:padding="10dp"
                android:src="@drawable/activity_back_color_big"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <TextView

                android:paddingLeft="20dp"
                android:gravity="center"
                android:text="Registration Guidance"
                android:textColor="@color/md_deep_orange_900"
                android:textSize="20sp"
                android:id="@+id/activities_detail_toolbar_centertext"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/activity_detail_registration_instruction_next"
                android:paddingLeft="5dp"
                android:gravity="center"
                android:text="next"
                android:textColor="@color/md_grey_400"
                android:textSize="18sp"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>


        </LinearLayout>


    </android.support.v7.widget.Toolbar>


    <ScrollView
        android:layout_below="@+id/activities_detail_registration_instruction_toolbar"
        android:id="@+id/activities_detail_registration_instruction_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@color/md_white_1000"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:paddingTop="12dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:lineSpacingMultiplier="1.5"
                android:singleLine="false"
                android:text="@string/activities_detail_registration_instruction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:background="#FDFDFD"
        android:translationZ="3dp"
        android:id="@+id/activities_detail_registration_instruction_radioButtonradio_container"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:gravity="center"
            android:textSize="14sp"
            android:text="我已阅读报名须知并同意遵守报名协议"
            android:textColor="#FB8041"
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:id="@+id/activities_detail_registration_instruction_radioButton"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="25dp"/>

    </LinearLayout>


</RelativeLayout>
