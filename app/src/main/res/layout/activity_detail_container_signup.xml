<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activities_detail_content_center_container_signup"
    android:gravity="center"
    android:elevation="1dp"
    android:orientation="horizontal"
    android:background="@color/md_white_1000"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="4"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="举行时间：2016年04月01日"
            android:textSize="16sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            android:text="花城广场（起点）"
            android:textSize="13sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            android:text="￥ 188"
            android:textColor="#FB8041"
            android:textSize="18sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@+id/activities_detail_content_center_button_signup"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:textColor="@color/md_white_1000"
        android:background="@drawable/activity_detail_signup"
        android:textSize="16sp"
        android:text="SIGN UP"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="40dp"/>

</LinearLayout>
