<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="left"
              android:orientation="horizontal"
              android:paddingBottom="10dp"
              android:paddingTop="10dp">

    <ImageView
        android:id="@+id/message_left_list_chat_single_group_item_other_profile"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/message_left_list_chat_profile_other_madie"/>

    <TextView
        android:id="@+id/message_left_list_chat_single_group_item_other_message_tv"
        android:layout_width="wrap_content"
        android:maxWidth="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:background="@drawable/message_left_list_chat_single_group_item_background"
        android:gravity="center|left"
        android:paddingBottom="6dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="6dp"
        android:singleLine="false"
        android:text="other_madie"
        android:textSize="16sp"
        android:elevation="1.2dp"/>

</LinearLayout>

