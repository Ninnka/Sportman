<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="@color/md_grey_200"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Toolbar
        android:layout_gravity="top"
        android:id="@+id/activities_detail_registration_information_toolbar"
        android:minHeight="?android:actionBarSize"
        android:background="#FEFEFE"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="3dp"
        android:popupTheme="@android:style/ThemeOverlay.Material.Light">

        <LinearLayout
            android:gravity="left|center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/activity_detail_registration_information_return"
                android:padding="10dp"
                android:src="@drawable/activity_back_color_big"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <TextView
                android:paddingLeft="20dp"
                android:gravity="center|left"
                android:layout_marginLeft="30dp"
                android:text="Information Log-in"
                android:textColor="@color/md_deep_orange_900"
                android:textSize="20sp"
                android:id="@+id/activities_detail_registration_information_toolbar_centertext"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>


        </LinearLayout>


    </Toolbar>

    <LinearLayout
        android:background="@color/md_white_1000"
        android:orientation="vertical"
        android:id="@+id/activity_detail_registration_information_login_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="必填信息"
            android:textSize="18sp"
            android:textColor="@color/md_grey_700"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:background="#FCFCFC"
            android:translationZ="1dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"/>


        <LinearLayout
            android:background="@color/md_white_1000"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="35dp">

            <TextView
                android:text="真实姓名："
                android:textSize="16sp"
                android:textColor="@color/md_grey_600"
                android:gravity="center|right"
                android:paddingRight="5dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <EditText
                android:background="@color/md_white_1000"
                android:gravity="center|left"
                android:inputType="textPersonName"
                android:editable="false"
                android:hint="请输入真实姓名"
                android:textColorHint="@color/md_grey_400"
                android:textSize="16sp"
                android:textColor="@color/md_grey_600"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:enabled="true"/>

        </LinearLayout>

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/md_grey_200"
            android:layout_width="match_parent"
            android:layout_height="1.2dp"/>

        <LinearLayout
            android:background="@color/md_white_1000"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="35dp">

            <TextView
                android:text="证件号码："
                android:textSize="16sp"
                android:textColor="@color/md_grey_600"
                android:gravity="center|right"
                android:paddingRight="5dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <EditText
                android:id="@+id/activities_detail_registration_information_textidentity"
                android:background="@color/md_white_1000"
                android:gravity="center|left"
                android:editable="true"
                android:hint="请输入身份证号码"
                android:textColorHint="@color/md_grey_400"
                android:inputType="text"
                android:textSize="16sp"
                android:textColor="@color/md_grey_600"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:enabled="true"/>

        </LinearLayout>

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/md_grey_200"
            android:layout_width="match_parent"
            android:layout_height="1.2dp"/>

        <LinearLayout
            android:background="@color/md_white_1000"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="35dp">

            <TextView
                android:text="手机号码："
                android:textSize="16sp"
                android:textColor="@color/md_grey_600"
                android:gravity="center|right"
                android:paddingRight="5dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:paddingRight="20dp"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/activities_detail_registration_information_textphonenumber"
                    android:background="@color/md_white_1000"
                    android:gravity="center|left"
                    android:editable="true"
                    android:hint="请输入手机号码"
                    android:textColorHint="@color/md_grey_400"
                    android:inputType="textPassword|numberPassword"
                    android:textSize="16sp"
                    android:textColor="@color/md_grey_600"
                    android:layout_weight="2.04"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:enabled="true"/>

                <TextView
                    android:id="@+id/activities_detail_registration_information_applytoken"
                    android:text="验证码"
                    android:textSize="14sp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/md_grey_500"
                    android:gravity="center"
                    android:background="@drawable/activities_detail_registration_information_token"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/md_grey_200"
            android:layout_width="match_parent"
            android:layout_height="1.2dp"/>

        <LinearLayout
            android:background="@color/md_white_1000"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="35dp">

            <TextView
                android:text="短信验证码："
                android:textSize="16sp"
                android:textColor="@color/md_grey_600"
                android:gravity="center|right"
                android:paddingRight="5dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <EditText
                android:id="@+id/activities_detail_registration_information_texttoken"
                android:background="@color/md_white_1000"
                android:gravity="center|left"
                android:inputType="textPersonName"
                android:editable="false"
                android:hint="请输入验证码"
                android:textColorHint="@color/md_grey_400"
                android:textSize="16sp"
                android:textColor="@color/md_grey_600"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:enabled="true"/>

        </LinearLayout>

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/md_grey_200"
            android:layout_width="match_parent"
            android:layout_height="1.2dp"/>

        <LinearLayout
            android:background="@color/md_white_1000"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="35dp">

            <TextView
                android:text="选择项目："
                android:textSize="16sp"
                android:textColor="@color/md_grey_600"
                android:gravity="center|right"
                android:paddingRight="5dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:paddingRight="20dp"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <Spinner

                    android:id="@+id/activities_detail_registration_information_itemspinner"
                    android:entries="@array/activities_detail_registration_information_itemspinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </Spinner>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:background="@drawable/activities_detail_registration_information_submit"
        android:text="提交信息"
        android:textColor="#FB8041"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/activities_detail_registration_information_submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>


</LinearLayout>
