<manifest package="com.example.macyaren.sportman"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name=".ExampleApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <action android:name="com.macya.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".ActivityCitySelection"
            android:windowSoftInputMode="adjustPan">

            <intent-filter>
                <action android:name="com.macya.intent.action.CITY_SELECTION"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity android:name=".ActivitiesDetail">

            <intent-filter>
                <action android:name="com.macya.intent.action.ACTIVITIES_DETAIL"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity android:name=".ActivitiesDetailRegistrationInstruction">

            <intent-filter>
                <action
                    android:name="com.macya.intent.action.ACTIVITIES_DETAIL_REGISTRATION_INSTRUCTION"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity android:name=".ActivitiesDetailRegistrationInfomation">

            <intent-filter>
                <action
                    android:name="com.macya.intent.action.ACTIVITIES_DETAIL_REGISTRATION_INFORMATION"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity android:name=".ActivitiesDetailRegistrationComplete">

            <intent-filter>
                <action
                    android:name="com.macya.intent.action.ACTIVITIES_DETAIL_REGISTRATION_COMPLETE"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".MessageLeftListFollowNews"
            android:noHistory="true">

            <intent-filter>

                <action android:name="com.macya.intent.action.Message_Left_List_Follow_News"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".MessageLeftListChat_Single_Group">

            <intent-filter>

                <action android:name="com.macya.intent.action.MessageLeftListChat_Single_Group"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>

        </activity>


    </application>

</manifest>
